<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <div id="container">
    <div class="header">
      <%= render "header" %>
    </div>
    <div class="sidebar">
      <%= render "sidebar" %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
    <div class="footer">
      <%= render "footer" %>
    </div>
  </div>
</body>
</html>