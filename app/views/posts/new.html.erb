<span>
    <%= link_to "投稿一覧", "index3" %>
</span>

<h3>新規Post</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 140 %>
    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %>
  </div>
  <%= f.submit "Tweetする" %>
<% end %>
<%= link_to "一覧に戻る", posts_index3_path %>